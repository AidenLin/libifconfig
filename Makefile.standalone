default:
	rm -Rf stage/libifc
	mkdir -p stage/libifc
	$(CC) -Wall -fPIC -shared -o stage/libifc/libifc.so src/libifc.c src/libifc_internal.c
	cp src/libifc.h stage/libifc/
clean:
	rm -Rf stage
checkstyle:
	uncrustify --check -q -c tools/uncrustify_freebsd.cfg `find . -name "*.[c|h]"`
doxygen:
	rm -Rf stage/doxygen
	mkdir -p stage/doxygen
	doxygen tools/Doxyfile
